@model EntityLayer.concrete.Author
@{
    ViewBag.Title = "Author_Edit";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<form class="form-group" method="post">
    @Html.Label("Id")
    @Html.TextBoxFor(x => x.Author_Id, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Ad Soyad")
    @Html.TextBoxFor(x => x.Author_Name, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Hakkında")
    @Html.TextAreaFor(x => x.Author_About, new { @class = "form-control" })
    <br />
    <br />

    @Html.Label("Resim")
    @Html.TextBoxFor(x => x.Author_Image, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Mail Adresi")
    @Html.TextBoxFor(x => x.Author_Mail, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Şifre")
    @Html.TextBoxFor(x => x.Author_Password, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Telefon Numarası")
    @Html.TextBoxFor(x => x.Author_Phone, new { @class = "form-control" })
    <button class="btn btn-outline-danger">Gönder</button>
</form>


