@model IEnumerable<EntityLayer.concrete.Author>
@{
    ViewBag.Title = "Author_List";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}





<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">

    <!-- Site wrapper -->

    <div class="wrapper">

        <!-- Navbar -->

            <!-- Main content -->

            <section class="content">

                <!-- Default box -->

                <div class="card card-solid">
                   
                        <div class="card-body pb-0">

                            <div class="row d-flex align-items-stretch">
                                @foreach (var i in Model)
                                {
                                    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">

                                        <div class="card bg-light">

                                            <div class="card-header text-muted border-bottom-0">

                                                Yazar:

                                            </div>

                                            <div class="card-body pt-0">

                                                <div class="row">

                                                    <div class="col-7">

                                                        <h2 class="lead"><b>@i.Author_Name</b></h2>

                                                        <p class="text-muted text-xs"><b>Yazar Hakkında: </b> @i.Author_About </p>

                                                        <ul class="ml-4 mb-0 fa-ul text-muted">

                                                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-mail-bulk"></i></span>@i.Author_Mail</li>
                                                            <br/>
                                                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone-alt">+90 - @i.Author_Phone</i></span> </li>

                                                        </ul>

                                                    </div>

                                                    <div class="col-5 text-center">

                                                        <img src="@i.Author_Image" alt="" class="img-circle img-fluid">

                                                    </div>

                                                </div>

                                            </div>

                                            <div class="card-footer">

                                                <div class="text-right">

                                                    

                                                    <a href="/Author/Author_Edit/@i.Author_Id" class="btn btn-sm btn-outline-success">

                                                        <i class="fas fa-user"></i> Profili Düzenle

                                                    </a>

                                                </div>

                                            </div>

                                        </div>

                                    </div>
                                }
                                </div>
                            
                        </div>
                    
                    </div>

                <!-- /.card -->

            </section>

            <!-- /.content -->

        </div>

        <!-- /.control-sidebar -->

</body>

</html>
<a href="/Author/Add_Author/" class="btn btn-outline-info">Yeni Yazar Girişi</a> 
