@model IEnumerable<EntityLayer.concrete.Blog>

@foreach (var i in Model)
{
<div class="sidebar-box">
    <div class="bio text-center">
        <img src="@i.Author.Author_Image" alt="Image Placeholder" class="img-fluid mb-5">
        <div class="bio-body">
            <h2>@i.Author.Author_Name</h2>
            <p class="mb-4">@i.Author.Author_About</p> 
        </div>
    </div>
</div>
}