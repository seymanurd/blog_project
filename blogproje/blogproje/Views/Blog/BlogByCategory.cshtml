@model IEnumerable<EntityLayer.concrete.Blog>

@{
    ViewBag.Title = "BlogByCategory";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <span>Category</span>
                @foreach (var x in Model)
                {
                <h3>@x.Category.Category_Name</h3>
                <p>@x.Category.Category_Description</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-white">
    <div class="container">
        <div class="row">
            @foreach (var i in Model)
            {
            <div class="col-lg-4 mb-4">
                <div class="entry2">
                    <a href="/Blog/BlogDetails/@i.Blog_ID"><img src="@i.Blog_Image" alt="Image" class="img-fluid rounded"></a>
                    <div class="excerpt">
                        <span class="post-category text-white bg-secondary mb-3">@i.Category.Category_Name</span>

                        <h2><a href="/Blog/BlogDetails/@i.Blog_ID">@i.Blog_Title</a></h2>
                        <div class="post-meta align-items-center text-left clearfix">
                            <figure class="author-figure mb-0 mr-3 float-left"><img src="@i.Author.Author_Image" alt="Image" class="img-fluid"></figure>
                            <span class="d-inline-block mt-1">By <a href="#">@i.Author.Author_Name</a></span>
                            <span>&nbsp;-&nbsp; @i.Blog_Date</span>
                        </div>

                        <p>@i.Blog_Content.Substring(0, i.Blog_Content.Substring(0, 250).LastIndexOf(" "))</p>
                        <p><a href="#">Read More</a></p>
                    </div>
                </div>
            </div>
            }
        </div>
        
    </div>
</div>
@Html.Action("Footer", "About")