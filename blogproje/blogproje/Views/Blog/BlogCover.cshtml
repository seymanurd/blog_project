@model IEnumerable<EntityLayer.concrete.Blog>
@foreach (var i in Model)
{
<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('@i.Blog_Image');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <span class="post-category text-white bg-success mb-3">@i.Category.Category_Name</span>
                    <h1 class="mb-4"><a href="#">@i.Blog_Title</a></h1>
                    <div class="post-meta align-items-center text-center">
                        <figure class="author-figure mb-0 mr-3 d-inline-block"><img src="@i.Author.Author_Image" alt="Image" class="img-fluid"></figure>
                        <span class="d-inline-block mt-1">@i.Author.Author_Name</span>
                        <span>&nbsp;-&nbsp;@i.Blog_Date </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
