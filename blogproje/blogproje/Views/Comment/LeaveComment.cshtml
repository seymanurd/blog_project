<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Bırakın </h3>
    <form method="post" class="p-5 bg-light">
        <div class="form-group">
            <label for="name">Kullanıcı Adı *</label>
            <input type="text" class="form-control" name="UserName">
        </div>
        <div class="form-group">
            <label for="email">Email *</label>
            <input type="email" class="form-control" name="Mail">
        </div>

       <input type="hidden" name ="Comment_date" value="@DateTime.Now.ToShortDateString()"/>
        <input type="hidden" name="Blog_ID" value="@ViewBag.ID"/>
        <div class="form-group">
            <label for="message">Yorum</label>
            <textarea name="Comment_Text" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Gönder" class="btn btn-primary">
        </div>

    </form>
</div>
